<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimeraApp.PrimerAppActivity">

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/BotonEnviar"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Enviar"
       android:background="@color/purple_200"
       android:layout_marginLeft="20dp"
       android:layout_marginTop="20dp"
       app:layout_constraintTop_toBottomOf="@+id/EditTextPassware"

       app:layout_constraintStart_toStartOf="parent"
        />

   <androidx.appcompat.widget.AppCompatEditText
       android:id="@+id/EditText"
       android:singleLine="true"
       android:maxLines="1"
       android:layout_width="250dp"
       android:layout_height="wrap_content"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"

       />

   <TextView
      android:id="@+id/usename"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="Usuario:"
       android:textSize="20sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@+id/EditText"
       app:layout_constraintBottom_toTopOf="@+id/EditTextPassware"
       app:layout_constraintTop_toTopOf="parent"
       />

   <androidx.appcompat.widget.AppCompatEditText
       android:id="@+id/EditTextPassware"
       android:layout_width="250dp"
       android:layout_height="wrap_content"
       android:singleLine="true"
       android:maxLines="1"
       app:layout_constraintTop_toBottomOf="@+id/EditText"
       app:layout_constraintEnd_toEndOf="parent"



       />

   <TextView
      android:id="@+id/passware"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="ContraseÃ±a:"
      android:textSize="20sp"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/usename"
       app:layout_constraintEnd_toStartOf="@+id/EditTextPassware"
       app:layout_constraintBottom_toTopOf="@+id/BotonEnviar"
       />







</androidx.constraintlayout.widget.ConstraintLayout>